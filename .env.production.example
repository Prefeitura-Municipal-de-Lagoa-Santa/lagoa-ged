# Arquivo de exemplo .env.production
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# Configurações da Aplicação
APP_NAME="Lagoa GED"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8001

# Configurações do Log
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Configurações do MongoDB (otimizadas para produção)
DB_CONNECTION=mongodb
DB_HOST=lagoa_mongo
DB_PORT=27017
DB_DATABASE=lagoa_ged_db
DB_USERNAME=root
DB_PASSWORD=sua_senha_segura_aqui
DB_AUTHENTICATION_DATABASE=admin

# Configurações do Redis (para queue e cache)
REDIS_CLIENT=phpredis
REDIS_HOST=lagoa_redis
REDIS_PASSWORD=sua_senha_redis_aqui
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_NOTIFICATIONS_DB=2

# Configurações de Queue
QUEUE_CONNECTION=redis

# Configurações de Cache
CACHE_STORE=redis
CACHE_PREFIX=lagoa_ged_cache

# Configurações de Sessão
SESSION_DRIVER=redis
SESSION_LIFETIME=480
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configurações de E-mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configurações do LDAP (se aplicável)
LDAP_CONNECTION=default
LDAP_HOST=127.0.0.1
LDAP_USERNAME="cn=user,dc=local,dc=com"
LDAP_PASSWORD=secret
LDAP_PORT=389
LDAP_BASE_DN="dc=local,dc=com"
LDAP_TIMEOUT=5
LDAP_SSL=false
LDAP_TLS=false

# Configurações de Autenticação
AUTH_GUARD=web

# Configurações de Arquivos
FILESYSTEM_DISK=local

# Performance e Otimização
OCTANE_SERVER=swoole

# Configurações específicas para importação
IMPORT_CHUNK_SIZE=50
IMPORT_TIMEOUT=1800
IMPORT_MEMORY_LIMIT=1024M